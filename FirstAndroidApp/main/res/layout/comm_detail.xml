<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/comm_star"
                android:layout_marginTop="25dp"
                android:paddingLeft="340dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fav"
                android:background="#FAFAFA"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Committee ID:"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/comm_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N.A"
                    android:layout_marginRight="10dp"
                    android:textSize="25dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/comm_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:text="N.A"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chamber:"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:maxHeight="40dp"
                    android:maxWidth="40dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/comm_chamberimage"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:id="@+id/comm_chamber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N.A"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Committee:"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/comm_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N.A"
                    android:layout_marginRight="10dp"
                    android:textSize="25dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact:"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/comm_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N.A"
                    android:layout_marginRight="10dp"
                    android:textSize="25dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Office:"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/comm_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N.A"
                    android:layout_marginRight="10dp"
                    android:textSize="25dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

