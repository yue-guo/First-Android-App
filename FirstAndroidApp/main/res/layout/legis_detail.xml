    <ImageView
        android:paddingTop="50dp"
        android:paddingLeft="130dp"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/legis_image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/legis_party"
            android:layout_marginLeft="90dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"

            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/legis_partyname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Republican"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chamber:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_chamber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>
