    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Term:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_startterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Term:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_endterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <ProgressBar
            android:id="@+id/legis_termprogress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            style="?android:attr/progressBarStyleHorizontal"

            android:visibility="visible"
            android:max="100"
            android:progress="70"
            android:layout_marginRight="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="5dp"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fax:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_fax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday:"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/legis_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</RelativeLayout>

